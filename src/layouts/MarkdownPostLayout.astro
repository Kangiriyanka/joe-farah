---
import BaseLayout from "../layouts/BaseLayout.astro";
import TableOfContents from "../components/TableOfContents.astro";
import Separator from "../components/Separator.astro";
import CommentForm from "../components/CommentForm.astro";
import CommentList from "../components/CommentList.astro";

const { frontmatter, headings } = Astro.props;
const dateOptions: Intl.DateTimeFormatOptions = {
  timeZone: 'America/New_York',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  hour: '2-digit',
  minute: '2-digit',
};





const formattedPublishDate = new Date(frontmatter.pubDate).toLocaleString("en-US", dateOptions);
const upDate = new Date(frontmatter.upDate).toLocaleString("en-US", dateOptions);


---

<BaseLayout pageTitle={frontmatter.title}>

  <div class="grid">
    
  <TableOfContents headings= {headings} />
  </div>
  <div class="post-content">
    
  <div class="flex gap-1">
    <img class=" svg-icon w-5 h-5"  src="/images/calendar.svg" alt="calendar">
    <p class="text-sm mb-2 pubDate">{formattedPublishDate} EST</p> 
    <p>
  {frontmatter.upDate ? "- Updated " : null}
  {frontmatter.upDate ? upDate : null}
</p>
    
    
  </div>

  
   

<p><em>{frontmatter.description}</em></p>
    <div class="tags flex gap-3 ">
      {frontmatter.tags.map((tag: string) => (
        <p class="tag dark-container">
         <a href={`/tags/${tag}`}>{tag}</a>
        </p>
    
      ))}

     
    </div>
  
    <Separator/>
 
 
  </div>





<slot />

<p class="text-right">
  <a id="returnLink" href="#" class="secondary-a ">
    
  </a>
</p>
</div>
<Separator/>
<CommentList  postSlug={frontmatter.postSlug} />

<CommentForm postSlug={frontmatter.postSlug}/>
</div>

</BaseLayout>




<script>
  const fromTag = new URLSearchParams(window.location.search).get('fromTag');
  if (fromTag) {
    const returnLink = document.getElementById('returnLink');
    if (returnLink instanceof HTMLAnchorElement ) {
      returnLink.href = `/tags/${fromTag}`;
      returnLink.textContent = `Return to #${fromTag}`;
    }
  
  }

  
  
</script>


<style>


.tag {
		
	
  
    border-color: rgb(48, 48, 47);
    padding: 0.5rem;
    font-size: 1rem;
    margin: 0.5rem 0 1rem 0;
    
    background-color: var(--white-background-color);
    border-radius: 55.5% 50.5% 49.5% 53% / 8% 1% 8% 1%;
    border-width: 2px;
    box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.2);
    transition: box-shadow 0.3s ease;
  }
  .tag:hover  {
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.3);
  }
    
    
</style>


<div id="imageModal" class="image-modal-overlay" role="dialog" aria-modal="true" aria-label="Image viewer">
  <button class="close-modal" aria-label="Close modal">&times;</button>
  <img id="modalContent" src="" alt="">
</div>

<!-- Step 1: Target imageModal and modalContent -->
<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("imageModal");
    const modalImg = document.getElementById("modalContent");

    document.addEventListener("click", (e) => {
      // Closest: find the nearest img inside a post-img-container
      // No matter what inside the image area was clicked, find the image inside .post-img-container
      const clickedImg = e.target.closest(".post-img-container img");
      if (!clickedImg) return;

      modalImg.src = clickedImg.src;
      modalImg.alt = clickedImg.alt;
      modal.classList.add("active");
      // Prevent scrolling
      document.body.style.overflow = "hidden";
    });


    const closeModal = () => {
      modal.classList.remove("active");
      document.body.style.overflow = "";
      // Let the animation finish before clearing src
      setTimeout(() => { modalImg.src = ""; }, 300);
    };


    modal.addEventListener("click", closeModal);
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && modal.classList.contains("active")) closeModal();
    });
  });
</script>

<style>



  .image-modal-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(8px);
    z-index: 1000;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    cursor: zoom-out;
  }

  .image-modal-overlay.active {
    display: flex;
    animation: fadeIn 0.3s ease;
  }

  .image-modal-overlay img {
    max-width: 90vw;
    max-height: 90vh; 
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 4px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    animation: zoomIn 0.3s cubic-bezier(0.16, 1, 0.3, 1);

  }

  .close-modal {
    position: absolute;
    top: 20px;
    right: 20px;
    background: none;
    border: none;
    color: white;
    font-size: 2.5rem;
    cursor: pointer;
    line-height: 1;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes zoomIn {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
  }
</style>